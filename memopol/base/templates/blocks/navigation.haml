-load memopol_tags
-load search_tags

%ul.nav-bar
  %li
    %a{href: "{% simple_search_shortcut 'is_active:1' %}"}
      By name
  %li
    %a{href: "{% simple_search_shortcut 'total_score>0 is_active:1' sort='-total_score' %}"}
      By total score
  -for menu in menus
    %li.has-flyout
      %a{href: "#"}
        =menu.name
      .flyout.large{style: "display: none;", id: "{{ menu.id }}"}
        .row
          -spaceless
            -for item in menu.content
                %div{class: "{{ menu.flyout_class }} columns dropdown_menu"}
                  %a{href: "{% simple_search_shortcut item.url %}"}
                    -if item.image
                      %img{src: "{{ item.image }}"}
                    -elif item.code
                      %span.label
                        =item.code
                    -elif item.sprite
                      %span{class: "{{ item.sprite }}"}
                    =item.display
  %li
    %a{href: "{% url meps:index_floor %}"}
      By floor
  %li
    %a{href: "{% simple_search_shortcut 'is_active:0' %}"}
      Former MEPs
